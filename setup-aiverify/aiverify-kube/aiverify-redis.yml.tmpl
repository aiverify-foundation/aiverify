apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: aiverify-redis-data-pvc
  namespace: <NAMESPACE>
spec:
  storageClassName: <EBS_STGCLASS_NAME>
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 2Gi
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: aiverify-redis-logs-pvc
  namespace: <NAMESPACE>
spec:
  storageClassName: <EBS_STGCLASS_NAME>
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: aiverify-redis-config
  namespace: <NAMESPACE>
data:
  redis.conf: |-
    # Close the connection after a client is idle for N seconds (0 to disable)
    timeout 0

    tcp-keepalive 300

    # Write logs to stdout
    logfile ""

    databases 16

    # Enable notification for HSET
    notify-keyspace-events Kh
---
apiVersion: v1
kind: Service
metadata:
  name: aiverify-redis-service
  namespace: <NAMESPACE>
spec:
  ports:
    - name: redis-tcp
      port: 6379
      protocol: TCP
      targetPort: 6379
  selector:
    app.kubernetes.io/name: aiverify-redis
  type: ClusterIP
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: aiverify-redis-deployment
  namespace: <NAMESPACE>
  labels:
    app.kubernetes.io/name: aiverify-redis
spec:
  replicas: 1
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app.kubernetes.io/name: aiverify-redis
  template:
    metadata:
      labels:
        app.kubernetes.io/name: aiverify-redis  
    spec:
      serviceAccountName: default
      securityContext:
        runAsUser: 1000
        runAsGroup: 2000
        fsGroup: 2000
        runAsNonRoot: true
        seccompProfile:
          type: RuntimeDefault
      containers:
        - name: aiverify-redis
          image: <REDIS_IMG_URL>
          securityContext:
            allowPrivilegeEscalation: false
            capabilities:
                drop:
                  ["ALL"]
          imagePullPolicy: IfNotPresent
          command:
            - "redis-server"
            - "--save"
            - "20 1"
            - "--loglevel"
            - "warning"
            - "--include"
            - "/etc/redis/config"
          volumeMounts:
            - name: aiverify-redis-data
              mountPath: /data
            - name: aiverify-redis-logs
              mountPath: /var/log/redis
            - name: aiverify-redis-config
              mountPath: /etc/redis/config
              subPath: redis.conf
      volumes:
        - name: aiverify-redis-data
          persistentVolumeClaim:
            claimName: aiverify-redis-data-pvc
        - name: aiverify-redis-logs
          persistentVolumeClaim:
            claimName: aiverify-redis-logs-pvc
        - name: aiverify-redis-config
          configMap:
            name: aiverify-redis-config
---